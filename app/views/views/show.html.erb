<section class="hero is-success">
<div class="hero-body">
<div class="container">
<h1 class="title">
VIEW DETAIL
</h1>
</div>
</div>
</section>

<section class="section">
<div class="container">
<div class="columns is-centered">
<div class="column is-7">
<div class="card">
<div class="card-image">
<figure class="image is-4by3">
<%= attachment_image_tag @view, :image %>
</figure>
</div>
<div class="card-content">
<div class="media">
<div class="media-content">
<p class="title is-4"><%= @view.title %></p>
</div>
<div class="content">
<table class="table is-narrow">
<tr>
<th>PLACE</th>
</tr>
<tr>
<td><%= simple_format @view.body %></td>
</tr>
</table>
<% if @view.user.id == current_user.id %>
<%=link_to "EDIT", edit_view_path(@view), class: "button is-success"%>
<% end %>
</div>
</div>
</div>
</div>

<div class="column is-4">
<article class="panel is-link">
<p class="panel-heading">
By <%=@view.user.username%>
</p>
</div>
<%=link_to user_path(@view.user) ,class:"panel-block" do %>
<span class="panel-icon">
<i class="fas fa-user" aria-hidden = "true"></i>
</span>
<%=@view.user.username %>, go to you're page
<% end %>
</article>
</div>
</div>
</div>
</section>



