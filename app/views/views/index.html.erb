<section class="hero is-success">
<div class="hero-body">
<div class="container">
<h1 class="title">
VIEWS LIST
</h1>
</div>
</div>
</section>

<section class="section">
<div class="container">
<div class="columns is-multiline">
<% @view.each do |view| %>
<div class="column is-4">
<div class="card">
<div class="card-image">
<figure class="image is-4by3">
<%=link_to view_path(view) do %>
<%= attachment_image_tag view, :image %>
<% end %>
</figure>
</div>
<div class="card-content">
<div class="media">
<div class="media=left">
<figure class="image is-48x48">
<%= link_to user_path(view.user.id)do%>
<%= attachment_image_tag view.user, :profile_image,fallback: "no-image.png", class: "profile_image"%>
<% end %>
</figure>
</div>
<div class="media-content">
<div class="title"><%= link_to view.user.username, user_path(view.user.id)%></div>
</div>
</div>
<div class="content">
<time><%= view.updated_at.strftime("%Y-%m-%d %H:%M") %></time> UPDATE
</div>
</div>
</div>
</div>
<% end %>
</div>
</div>
</section>