<section class="hero is-success">
<div class="hero-body">
<div class="container">
<h1 class="title">
EDIT
</h1>
</div>
</section>

<%if @view.errors.any? %>
<div class="notification is-danger">
<h2><%= pluralize(@view.errors.count, "error") %>prohibited this object from being saved: not successfully</h2>
<ul>
<% @view.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>
</ul>
</div>
<% end %>


<section class="section">
<div class="container">
<div class="columns is-centered">
<div class="column is-6">
<%= form_for @view do |f|%>

<div class="field">
<%=f.label :title, "NAME" , class: "label" %>
<%= f.text_field :title , class:"input"%>
</div>

<div class="field">
<%= f.label :body, "PLACE" , class: "label" %>
<%= f.text_area :body , class: "textarea" %>
</div>

<div class="field">
<%= f.label :image ,"PICTURE" , class: "label" %>
<%= f.attachment_field :image , class: "input" %>
</div>

<%= f.submit'UPDATE',class: "button is-success" %>
<% end %>
</div>
</div>
</section>