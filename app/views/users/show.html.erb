<section class="hero is-success">
 <div class="hero-body">
  <div class="container">
   <h1 class="title">
    MY PAGE
   </h1>
  </div>
 </div>
</section>

<section class="section">
 <div class="container">
  <div class="columns is-centered">
   <div class="column is-8">
    <div class="columns is-centered">
     <div class="column is-4">
      <figure class="image is-128x128" style="margin-left: auto; margin-right:auto;">
       <%= attachment_image_tag @user , :profile_image, fallback: "no-image.png", class:"profile_image is-rounded"%>
        </figure>
         </div>
          <div class="column is-8">
           <table class="table is-fullwidth">
            <tr>
             <td class="is-size-4">
              <strong><%= @user.username %></strong>
               </td>
<% if @user.id == current_user.id%>
<td class="is-size-4">
<%= @user.email %>
</td>
<td>
<%=link_to "EDIT" , edit_user_path(@user),class:"button is-primary"%>
</td>
<% end %>
</tr>
</table>
<table class="table is-fullwidth">
<tr>
<td>
<%= @user.profile %>
</td>
</tr>
</table>
</div>
</div>
</div>
</div>
</div>
</section>

<section class="section">
<div class="container">
<div class="columns is-multiline">
<% @user.views.each do |view|%>
<div class="column is-4">
<div class="card">
<div class="card-image">
<figure class="image is-4by3">
<%= attachment_image_tag view, :image %>
</figure>
</div>
<div class="card-content">
<div class="media">
<div class="media-content">
<%=link_to view_path(view),class:"panel-block" do %>
<span class="panel-icon">
<i class="fas fa-book" aria-hidden="true"></i>
</span>
SEE VIEW
<% end %>
<% if @user.id == current_user.id %>
<%=link_to edit_view_path(view),class:"panel-block" do %>
<span class="panel-icon">
<i class="fas fa-edit" aria-hidden="true"></i>
</span>
EDIT
<% end %>
<%=link_to view_path(view), method: :delete, data:{confirm:"Are you sure?"} , class: "panel-block" do %>
<span class="panel-icon">
<i class="fas fa-trash" aria-hidden="true"></i>
</span>
DELETE
<% end %>
<% end %>
</div>
</div>
<div class="content">
<time><%= view.updated_at.strftime("%Y-%m-%d %H:%M") %></time> UPDATE
</div>
</div>
</div>
</div>
</div>
<% end %>
</div>
</div>
</section>