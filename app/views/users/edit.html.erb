<section class="hero is-success">
<div class="hero-body">
<div class="container">
USER EDIT
</h1>
</div>
</div>
</section>

<%if @user.errors.any? %>
<div class="notification is-danger">
<h2><%= pluralize(@user.errors.count, "error") %>prohibited this object from being saved: not successfully</h2>
<ul>
<% @user.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>
</ul>
</div>
<% end %>

<div class="section">
<div class="container">
<div class="columns is-centered">
<div class="column is-6">
<%= form_for @user do |f| %>

<div class="field">
 <%= f.label :username, "USERNAME",class: "label" %>
 <%= f.text_field :username ,class:"input" %>
</div>

<div class="field">
 <%= f.label :email, "MAIL ADDRESS",class: "label" %>
 <%= f.text_field :email , class: "input" %>
</div>

<div class="field">
 <%= f.label :profile, "PROFILE" , class:"label"%>
 <%= f.text_field :profile ,class:"textarea"%>
</div>

<div class="field">
 <%= f.label :profile_image,"PROFIRE IMAGE" , class:"label"%>
 <%= f.attachment_field :profile_image ,class:"input"%>
</div>

 <%= f.submit "UPDATE" ,class: "button is-success" %>

<% end %>
</div>
</div>
</div>
</section>